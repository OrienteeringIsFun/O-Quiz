<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.orienteering.o_symbolquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/o_quiz_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OSymbolQuiz">
        <activity
            android:name=".LearnSymbolActivity"
            android:exported="true"
            android:label="@string/title_activity_learn_symbol"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OSymbolQuiz.NoActionBar" />
        <activity
            android:name=".LearnActivity"
            android:exported="true"
            android:label="@string/title_activity_learn"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OSymbolQuiz.NoActionBar" />
        <activity
            android:name=".SupportActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuizActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>